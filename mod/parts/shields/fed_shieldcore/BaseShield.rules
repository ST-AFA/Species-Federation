					Radius = &~/Part/Components/BaseArcShield/Radius
					Arc = 20d
					ArcSprite
					{
						Texture
						{
							File = "shield_energy_original.png"
							SampleMode = Linear
							MipLevels = max
						}
						Shader = "shield.shader"
						_waveTex
						{
							File = "shield_energy_wave.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = max
						}
						_maskTex
						{
							File = "shield_energy_original.png"
							SampleMode = Linear
							MipLevels = max
						}
						_waveSpeed = -2
